{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    /* ---------- File Layout ---------- */
    "rootDir": "./src",
    "outDir": "./dist",

    /* ---------- Environment Settings ---------- */
    "module": "nodenext",         // ✅ good for Node 18+ (supports ESModules & CommonJS)
    "moduleResolution": "nodenext", // ✅ required when using module: nodenext
    "target": "ES2022",           // ✅ slightly safer than "esnext" for production use
    "lib": ["ES2022"],            // ✅ modern JS features
    "types": ["node"],            // ✅ needed for Node globals like process, __dirname

    /* ---------- Outputs ---------- */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* ---------- Strictness ---------- */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* ---------- Module & Interop ---------- */
    "esModuleInterop": true,      // ✅ needed for import express from 'express'
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": false, // ❌ set to false for compatibility with common import styles
    "isolatedModules": true,
    "skipLibCheck": true,

    /* ---------- Experimental (optional) ---------- */
    // "noImplicitReturns": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true
  },

  "include": ["src"],  // ✅ ensures compiler watches your source folder
  "exclude": ["node_modules", "dist"]
}
